/* pages/virusmap/virusmap.wxss */

.t-border {
  border: 1px red solid;
}

.page {
  background: #fff;
}

/* banner */

.banner {
  width: 100%;
  height: 250rpx;
  background: #4a90e2;
  position: relative;
  box-sizing: border-box;
  padding-top: 45rpx;
}

.banner>view {
  width: 65%;
  margin: 0 auto;
  overflow: hidden;
  background: linear-gradient(to right, rgba(0, 82, 217, 0), rgba(52, 131, 223, 1), rgba(0, 82, 217, 0));
}

.banner-title {
  margin: 0 auto;
  width: 55%;
}

.banner-title>view {
  color: white;
  font-weight: 900;
  font-size: 48rpx;
  font-style: italic;
  padding: 0;
  margin: 0;
  display: block;
}

.banner-title>text {
  color: rgb(235, 59, 46);
  font-weight: 900;
  font-size: 48rpx;
  font-style: italic;
  margin-left: 15rpx;
  padding: 0;
  margin-top: -20rpx;
  display: block;
}

/* banner end */

/* map */

.search {
  width: 90%;
  height: 68rpx;
  position: absolute;
  top: 5%;
  left: 5%;
  background: rgba(255, 255, 255, 1);
  border-radius: 25rpx;
  display: flex;
  flex-direction: row;
}

.map {
  width: 100%;
  border-radius: 50rpx;
  margin-top: -50rpx;
  overflow: hidden;
}

.search>icon {
  height: 68rpx;
  line-height: 68rpx;
  vertical-align: middle;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.search>input:nth-of-type(1) {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  margin-left: 15rpx;
}

/* map end */
